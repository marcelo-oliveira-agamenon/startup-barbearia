    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "faker": "^5.4.0",
    "git-commit-msg-linter": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.1.3",
