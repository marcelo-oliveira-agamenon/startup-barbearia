    "test:verbose": "jest",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -f src/shared/infra/typeorm/ormconfig.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleNameMapper": {
      "@shared": "<rootDir>/src/shared"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "dependencies": {
